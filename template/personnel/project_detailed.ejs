<% include top.ejs %>
  <div class="page-title">
    <div class="title-env">
      <h1 class="title">项目详细</h1>
      <p class="description">Project details</p>
    </div>
    <div class="breadcrumb-env">
      <ol class="breadcrumb bc-1">
        <li> <a href="/personnel"><i class="fa-home"></i>首页</a> </li>
        <li>  <a href="/personnel/project">项目列表</a></li>
        <li class="active"> <strong>项目详细</strong> </li>
      </ol>
    </div>
  </div>
  <div class="panel panel-default">
				 
				<div class="mail-single">
							
							<!-- Email Title and Button Options -->
							<div class="mail-single-header">
								<h2>
									<%=project[0][0].p_name%>
								</h2>
								
								<div class="mail-single-header-options">
									<a href="/personnel/project" class="btn btn-gray btn-icon">
										<span>返回</span>
										<i class="fa-reply-all"></i>
									</a>
								</div>
							</div>
							<!-- Email Body -->
						<table class="table table-model-2 table-hover">
										<tbody>
											<tr>
												<td width="150px;">项目类型:</td>
												<td ><%=project[0][0].type%></td>
											</tr>
										 
											<tr>
												<td>(计划)制作时间: </td>
												<td><%=resure[0].from%>- <%=resure[0].to%> 共<%=resure[0].oCycle%>天 </td>
											</tr>
											<tr>
												<td>用　　途:</td>
												<td><%=project[0][0].purpose%></td>
											</tr>
											<tr>
												<td>尺　　寸:</td>
												<td><%=project[0][0].size%></td>
											</tr>
											<tr>
												<td>项目参考: </td>
												<td><%=project[0][0].consult%></td>
											</tr>
											<tr>
												<td>项目标准:</td>
												<td><%=project[0][0].standard%></td>
											</tr>
											<tr>
												<td>项目说明:</td>
												<td><%=project[0][0].say%></td>
											</tr>
										</tbody>
									</table>
							
							<!-- Email Attachments -->
							<div class="mail-single-attachments col-sm-12">
								<div class="col-sm-3">
								<h3>
									<i class="linecons-attach"></i>
									项目时间表
								</h3>
								
								<ul class="list-unstyled list-inline">
									<li onclick="jQuery('#modal-2').modal('show');" >
										<a href="#" class="thumb">
											<img src="/upload/<%=project[0][0].time_pic%> " class="img-thumbnail">
										</a>
						 
										<div class="links">
											<a href="/upload/<%=project[0][0].time_pic%>" download="<%=project[0][0].p_name%>项目时间表.jpg">下载</a>
										</div>
									</li>
								</ul>
								</div>
								 
							</div>
							<table class="table table-model-2 table-hover">
										<tbody>
											<tr>
												<td width="150px;"><h4><b>项目总结：</b></h4></td>
												<td ></td>
											</tr>
											<%if(project[2].length!==0){%>
											
											
											<tr>
												<td>标题: </td>
												<td><%=project[2][0].title%></td>
											</tr>
											<tr>
												<td>发布者: </td>
												<td><%=project[3][0].name_zh%></td>
											</tr>
											<tr>
												<td>发布时间: </td>
												<td><%=project[2][0].time%></td>
											</tr>
											<tr>
												<td>总结内容:</td>
												<td><%=project[2][0].contant%></td>
											</tr>
											<% }else{%>
											<tr>
												<td colspan="2">你还没有填写┗|｀O′|┛ 嗷~~ </td>
												
											</tr>
											<% }%>
										</tbody>
									</table>
						</div>
			</div>
  
  <!-- Main Footer --> 
  <!-- Choose between footer styles: "footer-type-1" or "footer-type-2" --> 
  <!-- Add class "sticky" to  always stick the footer to the end of page (if page contents is small) --> 
  <!-- Or class "fixed" to  always fix the footer to the end of page -->
      <% include footer.ejs %>
  </div>
</div>
<div class="modal fade custom-width" id="modal-2">
  <div class="modal-dialog" style="width: 50%;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">项目时间表</h4>
      </div>
      <div class="modal-body"> <img width="100%"  src="/upload/<%=project[0][0].time_pic%>" class="img-thumbnail"> </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
      </div>
    </div>
  </div>
</div>

